<apex:page controller="ConnectionController">
    <apex:form >
        <apex:pageBlock title="Create a New Connection">
            <apex:pageBlockButtons >     
                <apex:commandButton value="Save" action="{!Save}"/>
                <apex:commandButton value="Cancel" action="{!returnToCase}" immediate="true"/>
            </apex:pageBlockButtons>
                <apex:pageBlockSection columns="1" >
                <apex:inputField value="{!myConnection.Case__c}" />
                <apex:inputField value="{!myConnection.Account__c}"/>
                <apex:inputField value="{!myConnection.Connectivity_System__c}"/>
                <apex:inputField value="{!myConnection.Type__c}"/>
                <apex:inputField value="{!myConnection.Platform__c}"/>
                <apex:inputField value="{!myConnection.Status__c}"/>
                </apex:pageBlockSection>

        </apex:pageBlock>
    </apex:form>
